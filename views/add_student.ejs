<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('_bootstrap_meta')%>
		<title>Create Student Form</title>
		<style>
			body {
				background: linear-gradient(
					45deg,
					#FF6B6B 8.33%,
					#FF8770 8.33%,
					#FF8770 16.67%,
					#FFA07A 16.67%,
					#FFA07A 25%,
					#FFC86B 25%,
					#FFC86B 33.33%,
					#FFEA6B 33.33%,
					#FFEA6B 41.67%,
					#A4F87A 41.67%,
					#A4F87A 50%,
					#68EDC6 50%,
					#68EDC6 58.33%,
					#6BD9EA 58.33%,
					#6BD9EA 66.67%,
					#7A7AFF 66.67%,
					#7A7AFF 75%,
					#AC7AFF 75%,
					#AC7AFF 83.33%,
					#EA6BD9 83.33%,
					#EA6BD9 91.67%,
					#D06BF2 91.67%
				);
				background-size: 400% 400%;
				animation: gradient 15s ease infinite;
			}
	
			@keyframes gradient {
				0% {
					background-position: 0% 50%;
				}
				50% {
					background-position: 100% 50%;
				}
				100% {
					background-position: 0% 50%;
				}
			}
		</style>
	</head>

	<body style="background-color: #e6e9e9">
		<%- include('_header') %>
		<form
			class="w-50 mx-auto mt-4"
			action="/students/create-student"
			method="post"
			style="
				height: 100%;
				display: grid;
				place-content: center;
				background: white;
				border-radius: 5px;
				box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);
				padding: 50px 70px;
			"
		>
			<h3 style="text-align: center">Add Student</h3>
			<fieldset>
				<label for="batch">Batch</label>
				<div class="mb-3">
					<input type="text" class="form-control" id="batch" name="batch" />
				</div>
			</fieldset>

			<fieldset>
				<div class="mb-3">
					<label for="name" class="form-label">Name</label>
					<input type="text" class="form-control" id="name" name="name" />
				</div>
				<div class="mb-3">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" id="email" placeholder="abc@gmail.com" name="email" />
				</div>
				<div class="mb-3">
					<label for="contactNumber" class="form-label">Mobile Number</label>
					<input type="text" class="form-control" id="contactNumber" name="contactNumber" />
				</div>
				<div class="mb-3">
					<label for="college" class="form-label">College Name</label>
					<input type="text" class="form-control" id="college" name="college" />
				</div>
				<div class="mb-3">
					<label for="placement" class="form-label">Placement Status</label>
					<select class="form-select" aria-label="Default select example" name="placement" id="placement">
						<option value="Placed">Placed</option>
						<option value="Not Placed">Not Placed</option>
					</select>
				</div>
			</fieldset>

			<fieldset>
				<div class="mb-3" style="display: flex; justify-content: space-between">
					<div class="mb-3 p-1">
						<label for="dsa" class="form-label">DSA</label>
						<input type="text" class="form-control" id="dsa" name="dsa" />
					</div>
					<div class="mb-3 p-1">
						<label for="webd" class="form-label">Web Development</label>
						<input type="text" class="form-control" id="webd" name="webd" />
					</div>
					<div class="mb-3 p-1">
						<label for="react" class="form-label">React</label>
						<input type="text" class="form-control" id="react" name="react" />
					</div>
				</div>
			</fieldset>
			<button type="submit" class="btn btn-success align-self-center">Create Student</button>
		</form>
		<%- include('_bootstrap_script')%>
	</body>
</html>
